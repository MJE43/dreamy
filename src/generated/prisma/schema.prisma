generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique // Assuming email is the primary identifier for now
  dreams    Dream[]
}

model Dream {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  description String
  mood        Int // Add mood (e.g., 1-5)
  tags        String // Store tags as a delimited string
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  analysis    Analysis? // A dream can have zero or one analysis
}

model Analysis {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String // The actual analysis content from the LLM
  dreamId   String   @unique // Each analysis belongs to exactly one dream
  dream     Dream    @relation(fields: [dreamId], references: [id])
}
